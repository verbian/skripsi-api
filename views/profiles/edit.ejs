<% include ../partials/header %>

<div class='container-fluid'>
    <div class='row justify-content-center'>
        <div class='col-md-12 text-center'>
            <h1>Edit <%=user.username %>'s Profile</h1>
        </div>
        <div class='col-xs-12 col-md-6 col-lg-4'>
            <form action="/users/<%= user._id %>?_method=PUT" method="POST">
                <div class='form-group'>
                    <label for="inputfullName">Full Name</label>
                    <input class='form-control' type="text" name='profile[fullName]' value='<%= user.fullName%>' />
                </div>
                <div class='form-group'>
                    <label for="inputSpesialisasi">Spesialisasi</label>
                    <input class='form-control' type="text" name='profile[spesialisasi]'
                        value='<%= user.spesialisasi %>' />
                </div>
                <div class="form-group">
                    <label for="avatar">Image</label>
                    <input type="text" name="profile[avatar]" value='<%= user.avatar %>'>
                </div>
                <div class='form-group writeText'>
                    <label for="inputBio">Biodata</label>
                    <textarea class='form-control' type="textarea" name='profile[bio]' value='<%= user.bio %>' rows="8"
                        cols="70"><%= user.bio %></textarea>
                </div>
                <div class='form-group'>
                    <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
                </div>
            </form>
            <a href='/users'>Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>