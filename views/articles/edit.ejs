<% include ../partials/header %>

<div class='container'>
    <div class='row justify-content-center'>
        <div class='col-md-12 text-center'>
            <h1>Edit <%-article.name%></h1>
        </div>
        <div class='col-xs-12 col-md-6 col-lg-4'>
            <form action="/articles/<%= article._id %>/?_method=PUT" method="POST" enctype='multipart/form-data'>
                <div class='form-group'>
                    <input class='form-control' type="text" name='article[name]' value='<%- article.name%>' />
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <br>
                    <input type="file" id="image" name="image" accept="image/*" >
                </div>
                <div class='form-group'>
                    <textarea class='form-control' type="textarea" name='article[description]'
                        value='<%- article.description%>' rows="5"
                        cols="70"></textarea>
                </div>
                <div class='form-group'>
                    <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
                </div>
            </form>
            <a href='/articles'>Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>