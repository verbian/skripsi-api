<% include ../partials/header %>
<div class='container-fluid center'>
    <div class="rows">
        <h1 style="text-align: center">Tambah Penyakit Baru</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/idx" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Nama</label>
                    <input class="form-control" type="text" name="name" placeholder="Nama Penyakit">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <br>
                    <input class="form-control" type="text" name="image" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" type="text" name="description" rows="5" cols="70"
                        placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/idx">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>