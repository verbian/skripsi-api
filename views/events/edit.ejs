<% include ../partials/header %>

<div class='container'>
    <div class='row justify-content-center'>
        <div class='col-md-12 text-center'>
            <h1>Edit <%=event.name%></h1>
        </div>
        <div class='col-xs-12 col-md-6 col-lg-4'>
            <form action="/events/<%= event._id %>/?_method=PUT" method="POST" enctype='multipart/form-data'>
                <div class='form-group'>
                    <input class='form-control' type="text" name='event[name]' value='<%= event.name %>' />
                </div>
                <div class="form-group">
                    <label for="name">Price</label>
                    <input class="form-control" type="number" name="event[price]" value='<%= event.price %>'
                        placeholder="Harga">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <br>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class='form-group'>
                    <input class='form-control' type="textarea" name='event[description]'
                        value='<%= event.description%>' />
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= event.location %>">
                </div>
                <div class='form-group'>
                    <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
                </div>
            </form>
            <a href='/event'>Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>