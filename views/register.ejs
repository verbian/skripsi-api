<% include ./partials/header %>
<div class='container'>
    <div class='col-xs-12'>
        <form class="form-signin" action='/register' method='POST'>
            <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
            <div class='form-group'>
                <label for="inputUsername" class="sr-only">Username</label>
                <input type="text" id="inputUsername" class="form-control" name='username' placeholder="Username"
                    required autofocus>
            </div>
            <div class='form-group'>
                <label for="fullName" class="sr-only">Full Name</label>
                <input type="text" id="inputFullName" name='fullName' class="form-control" placeholder="Full Name">
            </div>
            <!-- <div class='form-group'>
                <label for="inputSpesialisasi" class="sr-only">Spesialisasi</label>
                <input type="text" id="inputSpesialisasi" name='spesialisasi' class="form-control" placeholder="Spesialisasi">
            </div> -->
            <div class='form-group'>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" name='password' class="form-control" placeholder="Password"
                    required>
            </div>
            <div class='form-group'>
                <label for="inputAvatar" class="sr-only">Avatar</label>
                <input type="text" id="inputAvatar" name='avatar' class="form-control" placeholder="Avatar Image">
            </div>
            <div class='form-group'>
                <label for="adminCode" class="sr-only">Admin Code</label>
                <input type="text" id="inputCode" name='adminCode' class="form-control" placeholder="Code">
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
        </form>
    </div>
</div>

<% include ./partials/footer %>